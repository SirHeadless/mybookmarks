DB: myBookmarks



DROP TYPE IF EXISTS public.url_type CASCADE;

CREATE TYPE url_type AS ENUM ('Tutorial','Description','Information');

COMMIT;


DROP SEQUENCE IF EXISTS url_seq;

CREATE SEQUENCE url_seq
       INCREMENT BY 1
       MINVALUE 1
       CACHE 1
       NO CYCLE;

COMMIT;

DROP TABLE IF EXISTS categories CASCADE;

CREATE TABLE categories
(
   category_id       bigint          DEFAULT nextval('category_seq'::regclass) NOT NULL,
   parent_id         bigint,
   name              varchar(100)    NOT NULL,
   entry_updated_at  timestamp,
   entry_created_at  timestamp,
   description       varchar(1000)
);

ALTER TABLE categories
   ADD CONSTRAINT categories_pkey
   PRIMARY KEY (category_id);

COMMIT;



DROP TABLE IF EXISTS category_url_map CASCADE;

CREATE TABLE category_url_map
(
   category_id  bigint         NOT NULL,
   name         varchar(100)   NOT NULL
);

COMMIT;


DROP TABLE IF EXISTS urls CASCADE;

CREATE TABLE urls
(
   url_id            bigint          DEFAULT nextval('url_seq'::regclass) NOT NULL,
   url               varchar(400)    NOT NULL,
   url_type          varchar(100),
   rating            smallint,
   page_created_at   timestamp,
   name              varchar(100)    NOT NULL,
   entry_updated_at  timestamp,
   entry_created_at  timestamp,
   description       varchar(1000),
   page_updated_at   timestamp
);

ALTER TABLE urls
   ADD CONSTRAINT urls_pkey
   PRIMARY KEY (url_id);

COMMIT;


INSERT INTO urls
(
  url_id,
  url,
  url_type,
  rating,
  page_created_at,
  name,
  entry_updated_at,
  entry_created_at,
  description,
  page_updated_at
)
VALUES
(
  3,
  'www.tutorial2.com',
  'Tutorial',
  5,
  NULL,
  'Tutorial2',
  NULL,
  NULL,
  'Super cool Tutorial2',
  NULL
);


DROP SEQUENCE IF EXISTS user_seq;

CREATE SEQUENCE user_seq
       INCREMENT BY 1
       MINVALUE 1
       CACHE 1
       NO CYCLE;


DROP TABLE IF EXISTS users CASCADE;

CREATE TABLE users
(
   users_id            bigint          DEFAULT nextval('user_seq'::regclass) NOT NULL,
   username              varchar(100)    NOT NULL,
         password       varchar(100) NOT NULL,
   forename              varchar(100)    NOT NULL,
      surname       varchar(100),
   entry_updated_at  timestamp,
   entry_created_at  timestamp

);

ALTER TABLE users
   ADD CONSTRAINT users_pkey
   PRIMARY KEY (users_id);

COMMIT;
